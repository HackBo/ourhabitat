    <EditText
        android:id="@+id/et_add_dialog_summary"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/add_dialog_margin_left"
        android:layout_marginRight="@dimen/add_dialog_margin_right"
        android:layout_marginTop="@dimen/add_dialog_margin"
        android:hint="@string/add_dialog_organism"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_add_dialog_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_add_dialog_summary"
        android:layout_marginLeft="@dimen/add_dialog_margin_left"
        android:layout_marginRight="@dimen/add_dialog_margin_right"
        android:layout_marginTop="@dimen/add_dialog_margin"
        android:hint="@string/add_dialog_comment"
        android:singleLine="true" />

    <RelativeLayout
        android:id="@+id/rl_add_dialog_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_add_dialog_address"
